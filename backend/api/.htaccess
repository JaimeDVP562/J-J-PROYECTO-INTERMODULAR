RewriteEngine On

# Health check endpoint
RewriteRule ^health/?$ health.php [L,QSA]

# Login
RewriteRule ^login/?$ login.php [L,QSA]

# Endpoint anidado: Productos por proveedor (debe ir ANTES que la ruta de proveedores gen√©rica)
RewriteRule ^proveedores/([0-9]+)/productos/?$ proveedores.php?id=$1&productos=1 [L,QSA]

# Lista de productos
RewriteRule ^productos/?$ productos.php [L,QSA]

# Detalle de un productos por id
RewriteRule ^productos/([0-9]+)/?$ productos.php?id=$1 [L,QSA]